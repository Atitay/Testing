<div id="mySidenav" class="sidenav">

    <div class="pt-2" id="myNav">

        @{
            if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                   lass="nav-link @checkCurrentController("Home") " id="Home">
                    <i class="fas fa-home"></i>&nbsp;Home
                </a>
                <a asp-area="Admin" asp-controller="Topics" asp-action="Index"
                   class="nav-link @checkCurrentController("Topics") @checkCurrentController("Topic")" id="Topics">
                    Topics
                </a>
                <a asp-area="Admin" asp-controller="Questions" asp-action="Index"
                   class="nav-link @checkCurrentController("Questions") @checkCurrentController("Question")" id="Questions">
                    Questions
                </a>
                <a asp-area="Admin" asp-controller="Subjects" asp-action="Index"
                   class="nav-link @checkCurrentController("Subjects") @checkCurrentController("Subject")" id="Subjects">
                    Subjects
                </a>
                <a asp-area="Admin" asp-controller="Exams" asp-action="Index"
                   class="nav-link @checkCurrentController("Exams") @checkCurrentController("Exam")" id="Exams">
                    Exams
                </a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                   class="nav-link @checkCurrentController("Users") @checkCurrentController("User")" id="Users">
                    Users
                </a>

            }
            else
            {
                <a asp-area="Users" asp-controller="Home" asp-action="Index"
                   class="nav-link @checkCurrentController("Home") " id="Dashboard">
                    Dashboard
                </a>
                <a asp-area="Users" asp-controller="Exams" asp-action="Index"
                   class="nav-link @checkCurrentController("Exams")  @checkCurrentController("Exam")" id="ExamsUser">
                    Exams
                </a>
            }

        }

    </div>

</div>

<style>
    body {
        font-family: 'Oswald', sans-serif;
    }

    .sidenav {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        background-color: none;
        padding-top: 16px;
        cursor: pointer;
    }

        .sidenav a {
            display: block;
            color: slategray;
            padding: 10px;
            text-decoration: none;
        }


            .sidenav a.active {
                background-color: #eeb6b6;
                color: white;
            }

            .sidenav a:hover {
                background-color: #efc2c2;
                color: white;
            }
</style>


