@model IEnumerable<Testing.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<div class="form-group row">
    <div class="col-1"></div>

    <div class="col">
        <br />
        <h2 class="text-info">Question List</h2>

        <div class="text-right">
            <a asp-action="Create" class="btn btn-outline-info"> <i class="fas fa-plus"></i> &nbsp; New Question</a>
        </div>
        <br /> <br />

        <div>
            <table class="table table-bordered">
                <tr class="table-info table-striped text-center">
                    <th>
                        @Html.DisplayNameFor(m => m.QuestionString)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.QuestionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Topic.TopicName)
                    </th>

                </tr>

                @foreach (var question in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => question.QuestionString)
                </td>
                <td>
                    @Html.DisplayFor(m => question.QuestionType)
                </td>
                <td>
                    @Html.DisplayFor(m => question.Topic.TopicName)
                </td>
                <partial name="_ButtonPartial" model="question.QuestionId"/>
            </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-1"></div>
</div>
