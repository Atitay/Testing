@using Testing.FrontEnd.Extension
@using Testing.Models
@model Testing.FrontEnd.Models.ViewModel.QuestionViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2 class="text-info text-center">New Question</h2>
    <br /><br />

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">

            <div style="background-color:lavenderblush;">
                <div class="form-group rounded">
                    <br />
                    <div class="col">
                        <label asp-for="Questions.QuestionString"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextAreaFor(m => m.Questions.QuestionString).Width(350).Height(100))
                    </div>
                    <span asp-validation-for="Questions.QuestionString" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.Hint"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextBoxFor(m => m.Questions.Hint).Width(350).Height(30).ShowClearButton(true))
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.Point"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().NumberBoxFor(m => m.Questions.Point).Width(350).Height(30).ShowSpinButtons(true))
                    </div>
                </div>


                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.QuestionType"></label>
                    </div>
                    <div class="col">
                        @Html.DropDownListFor(m => m.Questions.QuestionType, new SelectList(Enum.GetValues(typeof(QuestionType))), "Select Question Type")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.QuestionLevel"></label>
                    </div>
                    <div class="col">
                        @Html.DropDownListFor(m => m.Questions.QuestionLevel, new SelectList(Enum.GetValues(typeof(QuestionLevel))), "Select Question Level")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col ">
                        <label asp-for="Topics"></label>
                    </div>
                    <div class="col ">
                        <select asp-for="@Model.Questions.TopicId" asp-items="Model.Topics.ToSelectListItem(Model.Questions.TopicId)" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Choices.ChoiceString"></label>
                    </div>
                    <div class="col row">
                        <div class="col">
                            @(Html.DevExtreme().TextBoxFor(m => m.Choices.ChoiceString).Width(350).Height(30).ShowClearButton(true))
                        </div>
                        <div class="col">
                            @(Html.DevExtreme().CheckBoxFor(m => m.Choices.isCorrect))
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col">
                        <label asp-for="Choices.ChoiceString"></label>
                    </div>
                    <div class="col row">
                        <div class="col">
                            @(Html.DevExtreme().TextBoxFor(m => m.Choices.ChoiceString).Width(350).Height(30).ShowClearButton(true))
                        </div>
                        <div class="col">
                            @(Html.DevExtreme().CheckBoxFor(m => m.Choices.isCorrect))
                        </div>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col">
                        <label asp-for="Choices.FirstOrDefault().ChoiceString"></label>
                    </div>
                    <div class="col row">
                        <div class="col">
                            @(Html.DevExtreme().TextBoxFor(m => m.Choices.FirstOrDefault().ChoiceString).Width(350).Height(30).ShowClearButton(true))
                        </div>
                        <div class="col">
                            @(Html.DevExtreme().CheckBoxFor(m => m.Choices.FirstOrDefault().isCorrect))
                        </div>
                    </div>
                </div>*@

                <br />

            </div>
            <br />

            <div class=" form row col" style="margin-left:0px; margin-right:0px">
                <div class="text-left col">
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                </div>
                <div class="text-right col">
                    <input type="submit" class="btn btn-outline-info" value="Create" />
                </div>
            </div>

        </div>
        <div class="col-sm-2"></div>
    </div>
</form>
