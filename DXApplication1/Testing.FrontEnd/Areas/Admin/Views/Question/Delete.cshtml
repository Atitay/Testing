@using Testing.FrontEnd.Extension
@using Testing.Models
@model Testing.FrontEnd.Models.ViewModel.QuestionViewModel

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2 class="text-info text-center">Delete Question</h2>
    <input type="hidden" asp-for="Questions.QuestionId" />
    <br /><br />

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">

            <div style="background-color:lavenderblush;">

                <div class="form-group rounded">
                    <br />
                    <div class="col">
                        <label asp-for="Questions.QuestionString"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextAreaFor(m => m.Questions.QuestionString).Width(350).Height(100).ReadOnly(true))
                    </div>
                </div>


                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.Hint"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextBoxFor(m => m.Questions.Hint).Width(350).Height(30).ShowClearButton(true).ReadOnly(true))
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.Point"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().NumberBoxFor(m => m.Questions.Point).Width(350).Height(30).ShowSpinButtons(true).ReadOnly(true))
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.QuestionType"></label>
                    </div>
                    <div class="col">
                        @{
                            var enumType = Model.Questions.QuestionType.GetType();
                        }

                        @(Html.DevExtreme()
                             .SelectBoxFor(m => m.Questions.QuestionType)
                             .DataSource(Enum.GetNames(enumType))
                             .Value(Enum.GetName(enumType, Model.Questions.QuestionType)).Width(250).Height(30).ReadOnly(true)
                        )
                    </div>
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.QuestionLevel"></label>
                    </div>
                    <div class="col">
                        @{
                            var enumLevel = Model.Questions.QuestionLevel.GetType();
                        }

                        @(Html.DevExtreme()
                             .SelectBoxFor(m => m.Questions.QuestionLevel)
                             .DataSource(Enum.GetNames(enumLevel))
                             .Value(Enum.GetName(enumLevel, Model.Questions.QuestionLevel)).Width(250).Height(30).ReadOnly(true)
                        )
                    </div>
                </div>

                <div class="form-group">
                    <div class="col ">
                        <label asp-for="Topics"></label>
                    </div>
                    <div class="col ">
                        @(Html.DevExtreme().TextAreaFor(m => m.Questions.Topic.TopicName).Width(250).Height(30).ReadOnly(true))
                    </div>
                </div>

                <br />

            </div>
            <br />

            <div class=" form row col" style="margin-left:0px; margin-right:0px">
                <div class="text-left col">
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                </div>
                <div class="text-right col">
                    <input type="submit" class="btn btn-outline-danger" value="Delete" />
                </div>
            </div>

        </div>
        <div class="col-sm-2"></div>
    </div>
</form>

