@using Testing.FrontEnd.Extension
@using Testing.Models
@model Testing.FrontEnd.Models.ViewModel.QuestionViewModel

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2 class="text-info text-center">Delete Question</h2>
    <input hidden asp-for="Questions.QuestionId" />
    <br /><br />

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">

            <div style="background-color:lavenderblush;">

                <div class="form-group rounded">
                    <br />
                    <div class="col">
                        <label asp-for="Questions.QuestionString"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextAreaFor(m => m.Questions.QuestionString).Width(350).Height(100).ReadOnly(true))
                    </div>                  
                </div>

                <div class="form-group">
                    <div class="col">
                        <label asp-for="Questions.QuestionType"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextAreaFor(m=>m.Questions.QuestionType).Width(250).Height(30).ReadOnly(true))
                    </div>
                </div>

                <div class="form-group">
                    <div class="col ">
                        <label asp-for="Questions.Topic"></label>
                    </div>
                    <div class="col ">
                        @(Html.DevExtreme().TextAreaFor(m => m.Questions.Topic).Width(250).Height(30).ReadOnly(true))
                    </div>
                </div>
                <br />

            </div>
            <br />

            <div class=" form row col" style="margin-left:0px; margin-right:0px">
                <div class="text-left col">
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                </div>
                <div class="text-right col">
                    <input type="submit" class="btn btn-outline-danger" value="Delete" />
                </div>
            </div>

        </div>
        <div class="col-sm-2"></div>
    </div>
</form>

