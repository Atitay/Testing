@using Testing.Models
@model Testing.Models.Subject
    <div class="row ">
        <div class="col-sm pb-4 mb-5">
            <br />
            <form method="post">
                @(Html.DevExtreme().Form<Testing.Models.Subject>()
                .ShowValidationSummary(true)
                .ID("form")
                .ShowColonAfterLabel(true)
                .ColCount(1)
                .LabelLocation(FormLabelLocation.Left)

                .FormData(Model)


                .Items(groupItems =>
                               {
                                   groupItems.AddSimpleFor(m => m.SubjectName).Editor(e => e.TextBox().ReadOnly(true));

                                   groupItems.AddSimpleFor(m => m.SubjectLevel)
                                   .Editor(e => e.SelectBox()
                                   .ID("SubjectLevel")
                        .DataSource(Html.GetEnumSelectList<SubjectLevel>()
                        .Select(t => new { Value = int.Parse(t.Value), Text = t.Text }))
                            .ValueExpr("Value")
                            .DisplayExpr("Text").ReadOnly(true)
                            );


     groupItems.AddButton()
                    .HorizontalAlignment(HorizontalAlignment.Left)
                    .ButtonOptions(b => b.Text("Back")
                    .Type(ButtonType.Back)
                    .StylingMode(ButtonStylingMode.Contained)
                    .OnClick("BacktoIndex")
                    );
                               })
                )

                <script>
                    function BacktoIndex() {
                        window.location.href = "/Admin/Subjects/Index";
                    }
                </script>

            </form>
        </div>

        <div class="bg-white">&nbsp; &nbsp;&nbsp;</div>
        <div class="col-sm-4" style="background-color:#dfa9a9">
            <br />
            <div class="bg-white p-1 text-center"><h6>( @Model.Exams.Count )  List Exams!  </h6></div>
            <br />

            @foreach (var eq in Model.Exams)
            {
                <a asp-action="Index" asp-controller="Exam" asp-route-id="@eq.ExamId">
                    <span>&#x2600; @eq.ExamName </span><br />
                </a>
            }

            <br /><br />

            <a asp-action="ListExams" asp-route-id="@Model.SubjectId">
                See More Exams!<br />
            </a>
        </div>
    </div>