@using Testing.Models
@model Testing.Models.Topic

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2 class="text-info text-center">Delete Topic</h2>
    <input type="hidden" asp-for="TopicId" />
    <br /><br />

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm">

            <div style="background-color:lavenderblush;">

                <div class="form-group rounded">
                    <br />
                    <div class="col">
                        <label asp-for="TopicName"></label>
                    </div>
                    <div class="col">
                        @(Html.DevExtreme().TextAreaFor(m => m.TopicName).Width(250).Height(30).ReadOnly(true))
                    </div>
                </div>
                <br />
            </div>
            <br />

            <div class=" form row col" style="margin-left:0px; margin-right:0px">
                <div class="text-left col">
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                </div>
                <div class="text-right col">
                    <input type="submit" class="btn btn-outline-danger" value="Delete" />
                </div>
            </div>

        </div>
        <div class="col-sm-3"></div>
    </div>
</form>

