@model Testing.Models.Exam


@functions {

    public string checkCurrentAction (string nameAction)
    {
        var currentAct = this.ViewContext.RouteData.Values["action"].ToString();
        if (currentAct == nameAction)
            return "active";
        return "";
    }
}

<ul class="nav nav-tabs" id="myNav">
        <li class="nav-item">
            <a class="nav-link @checkCurrentAction("Index")" asp-action="Index" asp-route-id="@Model.ExamId"> Detail </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @checkCurrentAction("Questions")  @checkCurrentAction("AssignQuestions")" asp-action="Questions" asp-route-id="@Model.ExamId">
                <span class="badge badge-danger">@Model.QuestionExams.Count</span> &nbsp;Questions
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @checkCurrentAction("TestedBy")" asp-action="TestedBy" asp-route-id="@Model.ExamId">
                <span class="badge badge-danger ">@Model.UserExams.Count</span>&nbsp;Tested By
            </a>
        </li>
        
    </ul>
