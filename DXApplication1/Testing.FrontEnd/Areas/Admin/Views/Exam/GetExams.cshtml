<div class="row">

    <div class="col-sm-12">
        <br />
        <h2 class="text-info">Exam List</h2>
        <br />
        @(Html.DevExtreme().DataGrid<Testing.Models.Exam>().DataSource(d => d.Mvc()
                .Controller("Exam")
                .LoadAction("Get")
                .UpdateAction("Put")
                .InsertAction("Post")
                .DeleteAction("Delete")
                .Area("Admin")
                .Key("ExamId")
                )

             .ID("gridContainer")
             .Editing(editing =>
             {
                 editing.Mode(GridEditMode.Form);
                 editing.AllowAdding(true);
                 editing.AllowDeleting(true);
                 editing.AllowUpdating(true);

             })
             .FilterRow(filterRow => filterRow
                .Visible(true)
                .ApplyFilter(GridApplyFilterMode.Auto)
            )
            .SearchPanel(searchPanel => searchPanel
                .Visible(true)
                .Width(240)
                .Placeholder("Search...")
            )
            .HeaderFilter(headerFilter => headerFilter.Visible(true))
            .Columns(columns =>
            {
                columns.AddFor(m => m.ExamName).Caption("Exam Name").Width(400)
                .CellTemplate
                (@<text><a href="/Admin/Exam/GetQuestionExam/<%= data.ExamId %>"><%= data.ExamName %></a></text>);

            columns.AddFor(m => m.SubjectId).Caption("Subject Name")
            .Lookup(lookup => lookup
            .DataSource(d => d.Mvc().Controller("Exam").LoadAction("GetSubject").Key("SubjectId"))
            .DisplayExpr("SubjectName")
            .ValueExpr("SubjectId")
            )
            .FormItem(i => i
            .Editor(e => e.SelectBox()
            .DataSource(d => d.Mvc().Controller("Exam").LoadAction("GetSubject").Key("SubjectId"))
            .DisplayExpr("SubjectName")
            .ValueExpr("SubjectId"))
            );

            columns.AddFor(m => m.StartDate).Caption("Start Date");
            columns.AddFor(m => m.EndDate).Caption("End Date");
            columns.AddFor(m => m.Version).Caption("Version");
            })

            .ShowBorders(true)
    )

    </div>
</div>












































